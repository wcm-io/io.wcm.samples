{
  "jcr:primaryType": "cq:Component",
  "componentGroup": "Aside",
  "jcr:title": "Sponsor teaser",

  "cq:htmlTag": {
    "class": "col-1-4"
  },

  "cq:editConfig": {
    "cq:listeners": {
      "afteredit": "sampleApp.authoring.listener.refreshAjaxContentAfterEdit"
    }
  },

  "cq:dialog": {
    "jcr:primaryType": "nt:unstructured",
    "sling:resourceType": "cq/gui/components/authoring/dialog",
    "jcr:title": "Sponsor teaser",
    "content": {
      "sling:resourceType": "granite/ui/components/coral/foundation/tabs",
      "items": {
        "teaser": {
          "sling:resourceType": "granite/ui/components/coral/foundation/fixedcolumns",
          "jcr:title": "Teaser",
          "items": {
            "column": {
              "sling:resourceType": "granite/ui/components/coral/foundation/container",
              "items": {
                "title": {
                  "sling:resourceType": "granite/ui/components/coral/foundation/form/textfield",
                  "name": "./title",
                  "fieldLabel": "Title",
                  "required": true
                },
                "checkbox": {
                  "sling:resourceType": "granite/ui/components/coral/foundation/form/checkbox",
                  "name": "./inversedCheckbox",
                  "fieldDescription": "Checked equals false, unchecked equals true",
                  "text": "Check to hide other field",
                  "uncheckedValue": "true",
                  "granite:class": "wcmio-dialog-showhide",
                  "granite:data": {
                    "wcmio-dialog-showhide-target": ".checkbox-target"
                  }
                },
                "other-field": {
                  "sling:resourceType": "granite/ui/components/coral/foundation/form/textfield",
                  "granite:class": "checkbox-target",
                  "fieldLabel": "Label",
                  "fieldDescription": "Should be shown when checkbox is checked (value = false)",
                  "name": "./name",
                  "granite:data": {
                    "showhidetargetvalue": "false"
                  }
                }
              }
            }
          }
        }
      }
    }
  }

}
