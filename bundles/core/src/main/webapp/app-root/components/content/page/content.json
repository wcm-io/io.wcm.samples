{
  "jcr:primaryType": "cq:Component",
  "sling:resourceSuperType": "wcm-io-samples/core/components/global/page",

  "wcmio:parsysConfig": {
    "jcr:primaryType": "nt:unstructured",
    "paths": {

      "content": {
        "allowedChildren": [
          "wcm-io-samples/core/components/content/common/contentHeadline",
          "wcm-io-samples/core/components/content/common/contentRichText",
          "wcm-io/wcm/parsys/components/parsys"
        ]
      },

      "content_nested": {
         "pattern": "^jcr:content/content/.*$",
        "allowedChildren": [
          "wcm-io-samples/core/components/content/common/contentRichText",
          "wcm-io/wcm/parsys/components/parsys"
        ]
      }

    }
  }

}
