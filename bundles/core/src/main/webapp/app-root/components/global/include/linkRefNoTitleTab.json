{
  "jcr:primaryType": "nt:unstructured",
  "sling:resourceType": "granite/ui/components/coral/foundation/fixedcolumns",
  "jcr:title": "Link",
  "margin": true,
  "cq:showOnCreate": false,
  "items": {
    "column": {
      "sling:resourceType": "granite/ui/components/coral/foundation/container",
      "items": {

        "linkType": {
          "sling:resourceType": "granite/ui/components/coral/foundation/form/select",
          "name": "./linkType",
          "fieldLabel": "Link type",
          "granite:class": "cq-dialog-dropdown-showhide",
          "granite:data": {
            "cq-dialog-dropdown-showhide-target": ".option-linktype-showhide-target"
          },
          "items": {
            "internal": {
              "value": "internal",
              "text": "Internal"
            },
            "external": {
              "value": "external",
              "text": "External"
            },
            "media": {
              "value": "media",
              "text": "Asset"
            }
          }
        },

        "internalWell": {
          "sling:resourceType": "granite/ui/components/coral/foundation/well",
          "granite:class": "hide option-linktype-showhide-target foundation-layout-util-vmargin",
          "granite:data": {
            "showhidetargetvalue": "internal"
          },
          "items": {
            "linkContentRef": {
              "sling:resourceType": "wcm-io/handler/url/components/granite/form/siteRootPathField",
              "name": "./linkContentRef",
              "fieldLabel": "Internal page",
              "fieldDescription": "Link to target page in CMS (same site)"
            }
          }
        },

        "externalWell": {
          "sling:resourceType": "granite/ui/components/coral/foundation/well",
          "granite:class": "hide option-linktype-showhide-target foundation-layout-util-vmargin",
          "granite:data": {
            "showhidetargetvalue": "external"
          },
          "items": {
            "linkExternalRef": {
              "sling:resourceType": "granite/ui/components/coral/foundation/form/textfield",
              "name": "./linkExternalRef",
              "fieldLabel": "URL",
              "fieldDescription": "Link to external destination"
            }
          }
        },

        "mediaWell": {
          "sling:resourceType": "granite/ui/components/coral/foundation/well",
          "granite:class": "hide option-linktype-showhide-target foundation-layout-util-vmargin",
          "granite:data": {
            "showhidetargetvalue": "media"
          },
          "items": {
            "linkMediaRef": {
              "sling:resourceType": "wcm-io/handler/media/components/granite/form/pathfield",
              "name": "./linkMediaRef",
              "fieldLabel": "Asset reference",
              "rootPath": "/content/dam/wcm-io-samples",
              "mediaFormats": ["download"]
            },
            "linkMediaDownload": {
              "sling:resourceType": "wcm-io/wcm/ui/granite/components/form/checkbox",
              "name": "./linkMediaDownload",
              "text": "Download",
              "fieldDescription": "Open DAM asset item with download dialog"
            }
          }
        },

        "linkWindowTarget": {
          "sling:resourceType": "granite/ui/components/foundation/form/select",
          "name": "./linkWindowTarget",
          "fieldLabel": "Window target",
          "items": {
            "_self": {
              "value": "_self",
              "text": "Same window"
            },
            "_blank": {
              "value": "_blank",
              "text": "New window"
            }
          }
        }

      }
    }
  }
}
