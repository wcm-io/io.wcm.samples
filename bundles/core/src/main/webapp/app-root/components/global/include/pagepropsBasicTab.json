{
  "jcr:primaryType": "nt:unstructured",
  "sling:resourceType": "granite/ui/components/coral/foundation/fixedcolumns",
  "jcr:title": "Basic",
  "items": {
    "content": {
      "sling:resourceType": "granite/ui/components/coral/foundation/container",
      "items": {
        "title": {
          "sling:resourceType": "granite/ui/components/coral/foundation/form/fieldset",
          "items": {
            "title": {
              "sling:resourceType": "granite/ui/components/coral/foundation/form/textfield",
              "required": true,
              "name": "./jcr:title",
              "fieldLabel": "Title"
            },
            "pagetitle": {
              "sling:resourceType": "granite/ui/components/coral/foundation/form/textfield",
              "name": "./pageTitle",
              "fieldLabel": "Page Title"
            },
            "navigationtitle": {
              "sling:resourceType": "granite/ui/components/coral/foundation/form/textfield",
              "name": "./navTitle",
              "fieldLabel": "Navigation Title"
            },
            "msmConfigEndpoint": {
              "sling:resourceType": "granite/ui/components/coral/foundation/form/hidden",
              "value": "${empty param.item ? requestPathInfo.suffix : param.item }",
              "granite:class": "msm-config-endpoint"
            },
            "hideinnav": {
              "sling:resourceType": "granite/ui/components/coral/foundation/form/checkbox",
              "name": "./hideInNav",
              "text": "Hide in Navigation",
              "value": "true"
            },
            "deletehideinnav": {
              "sling:resourceType": "granite/ui/components/coral/foundation/form/hidden",
              "name": "./hideInNav@Delete",
              "value": "true"
            },
            "charset": {
              "sling:resourceType": "granite/ui/components/coral/foundation/form/hidden",
              "name": "_charset_",
              "value": "utf-8"
            }
          }
        },
        "onofftime": {
          "sling:resourceType": "granite/ui/components/coral/foundation/form/fieldset",
          "jcr:title": "On/Off Time",
          "items": {
            "ondate": {
              "sling:resourceType": "granite/ui/components/coral/foundation/form/datepicker",
              "displayedFormat": "DD.MM.YYYY HH:mm",
              "name": "./onTime",
              "type": "datetime",
              "fieldLabel": "On Time"
            },
            "ondate_type": {
              "sling:resourceType": "granite/ui/components/coral/foundation/form/hidden",
              "name": "./onTime@TypeHint",
              "value": "Date"
            },
            "offdate": {
              "sling:resourceType": "granite/ui/components/coral/foundation/form/datepicker",
              "displayedFormat": "DD.MM.YYYY HH:mm",
              "name": "./offTime",
              "type": "datetime",
              "fieldLabel": "Off Time"
            },
            "offdate_type": {
              "sling:resourceType": "granite/ui/components/coral/foundation/form/hidden",
              "name": "./offTime@TypeHint",
              "value": "Date"
            }
          }
        }
      }
    }
  }
}
